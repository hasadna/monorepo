{
  "rules": {
    "eofline": true,
    "curly": true,
    "no-unused-variable": true,
    "max-line-length": [true, 100],
    "quotemark": [true, "single", "avoid-escape", "avoid-template"],
    "comment-format": [
      true,
      "check-space"
    ],
    "semicolon": [
      true,
      "always",
      "ignore-bound-class-methods"
    ],
    "indent": [
      "true",
      "spaces",
      2
    ],
    "one-line": [
      true,
      "check-else"
    ],
    "trailing-comma": [true, {"multiline": "never", "singleline": "never"}],
    "import-spacing": true,
    "no-use-before-declare": false,
    "no-invalid-this": [true],
    "no-empty": false,
    "ban-types": [
      true,
      [
        ["Object", "Use {} instead"],
        ["String", "Use primitive 'string' type instead"],
        ["Number", "Use primitive 'number' type instead"],
        ["Boolean", "Use primitive 'boolean' type instead"]
      ]
    ],
    "no-empty-interface": true,
    "deprecation": true,
    "no-var-keyword": true,
    "one-line": [true, "check-open-brace", "check-whitespace"],
    "class-name": true
  }
}
