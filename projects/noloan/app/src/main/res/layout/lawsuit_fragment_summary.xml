<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LawsuitSummaryFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F0F0F0"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar_content"
            layout="@layout/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="11dp" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:baselineAligned="false"
                    android:layoutDirection="rtl"
                    android:orientation="horizontal"
                    android:paddingTop="9dp">

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@mipmap/ic_done" />

                    <TextView
                        android:id="@+id/textView_fileParagraph_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/heebo"
                        android:text="@string/summaryFragment_fileParagraph_title_text"
                        android:textSize="18sp" />
                </LinearLayout>


                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/button_viewFile"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="142dp"
                        android:layout_height="32dp"
                        android:layout_marginTop="13dp"
                        android:layout_marginRight="24dp"
                        android:layout_marginBottom="15dp"
                        android:background="@drawable/button_rectangle_rounded_blue_non_filled"
                        android:fontFamily="@font/heebo_medium"
                        android:text="@string/summaryFragment_fileParagraph_viewButton_text"
                        android:textColor="#0c63d2"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageButton
                        android:id="@+id/button_saveFile"
                        android:layout_width="56dp"
                        android:layout_height="32dp"
                        android:layout_marginTop="13dp"
                        android:layout_marginRight="23dp"
                        android:layout_marginBottom="15dp"
                        android:background="@drawable/button_rectangle_rounded_blue_non_filled"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="4dp"
                        android:scaleType="fitCenter"
                        android:src="@mipmap/ic_download"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/button_shareFile"
                        app:layout_constraintRight_toLeftOf="@id/button_viewFile"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageButton
                        android:id="@+id/button_shareFile"
                        android:layout_width="56dp"
                        android:layout_height="32dp"
                        android:layout_marginLeft="24dp"
                        android:layout_marginTop="13dp"
                        android:layout_marginRight="19dp"
                        android:layout_marginBottom="15dp"
                        android:background="@drawable/button_rectangle_rounded_blue_non_filled"
                        android:paddingHorizontal="19px"
                        android:paddingVertical="4dp"
                        android:scaleType="fitCenter"
                        android:src="@mipmap/ic_share"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@id/button_saveFile"
                        app:layout_constraintTop_toTopOf="parent" />

                </android.support.constraint.ConstraintLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:layoutDirection="rtl"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView_claimOnline_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:fontFamily="@font/heebo_medium"
                    android:paddingRight="12dp"
                    android:text="@string/summaryFragment_claimOnline_title_text"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:fontFamily="@font/heebo"
                    android:paddingRight="12dp"
                    android:text="@string/summaryFragment_claimOnline_onlineExplanation_text"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:fontFamily="@font/heebo"
                    android:paddingRight="12dp"
                    android:text="@string/summaryFragment_claimOnline_authExplanation_text"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:fontFamily="@font/heebo"
                    android:paddingRight="12dp"
                    android:text="@string/summaryFragment_claimOnline_paymentExplanation_text"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/button_claimOnline"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="131dp"
                    android:layout_height="32dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/button_rectangle_rounded_blue_filled"
                    android:fontFamily="@font/heebo_medium"
                    android:text="@string/summaryFragment_claimOnline_button_toWebSite_text"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layoutDirection="rtl"
                android:orientation="vertical"
                android:paddingBottom="9dp">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:fontFamily="@font/heebo_medium"
                    android:paddingRight="16dp"
                    android:text="@string/summaryFragment_claimFaxAddress_title_text"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/button_selectCourt"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_marginTop="11dp"
                    android:layout_marginBottom="9dp"
                    android:background="@drawable/button_rectangle_rounded_blue_non_filled"
                    android:fontFamily="@font/heebo_medium"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="@string/summaryFragment_button_chooseCourt_text"
                    android:textColor="#0C63D2"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView_courtAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:fontFamily="@font/heebo"
                    android:textDirection="anyRtl"
                    android:textSize="16sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/textView_courtFax"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:fontFamily="@font/heebo"
                    android:textSize="16sp"
                    android:visibility="gone" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</FrameLayout>