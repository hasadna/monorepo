<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SummaryTitle" parent="@android:style/TextAppearance.Medium">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/colorTextGrey1</item>
    </style>

    <style name="SummarySubTitle" parent="SummaryTitle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorTextGrey3</item>
    </style>

    <style name="SummaryContent" parent="@android:style/TextAppearance.Medium">
        <item name="android:fontFamily">sans-serif-medium</item>
    <style name="AlertDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:layoutDirection">rtl</item>
    </style>

    <style name="LawsuitFormTitle" >
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorTextGrey3</item>
    </style>

    <style name="ListFrom" parent="@android:style/TextAppearance.Medium">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorTextGrey1</item>
    </style>

    <style name="ListDate" parent="@android:style/TextAppearance.Medium">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="ListContent" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorTextGrey4</item>
    </style>

    <style name="aboutScreenText" parent="ListContent">
        <item name="android:textSize">18dp</item>
    </style>
</resources>
